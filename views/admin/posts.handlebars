<div class="container">
    <div class="alert alert-secondary text-center">
        <h1>ALL POSTS</h1>
    </div>
    <table class="table table-bordered">
        <thead class="bg-dark text-center">
            <tr class="text-white">
                <th>No</th>
                <th>Title</th>
                <th>Status</th>
                <th>Category</th>
                <th>Comment Permission</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each posts}}
            <tr>
                <td>{{@index}}</td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{category.title}}</td>
                <td>{{allowComment}}</td>
                <td class="d-flex">
                    <a href="/admin/posts/edit/{{_id}}" class="btn btn-sm btn-warning">Edit Post</a>
                    <form action="/admin/posts/delete/{{_id}}?newMethod=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger" type="submit">Delete Post</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>