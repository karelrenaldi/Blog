<main>
    <div class="spesific-post">
        <div class="back-to-home">
            <a href="/allProjets">
                < BACK TO ALL PROJECTS</a>
        </div>
        <div class="spesific-post-content">
            <div class="header-content">
                {{#if post.file}}
                <img class="card-img-top" src="{{post.file}}" alt="Card image cap">
                {{else}}
                <img class="card-img-top" src="https://picsum.photos/id/1011/750/300" alt="Card image cap">
                {{/if}}
                <div class="header-content-text">
                    <h1 class="title">
                        {{post.title}}
                    </h1>
                    <p><span>Created by KM ITB</span></p>
                </div>
            </div>
            <div class="main-content">
                <p class="description">
                    {{{post.description}}}
                </p>
            </div>
        </div>
        <hr />
        <div class="spesific-post-footer">
            <!-- Comment section -->
            <div class="comment">
                <h5 class="comment-header">Leave a Comment:</h5>
                <div class="comment-body">
                    <form action="/project/{{post._id}}" method="POST">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" name="comment_body"></textarea>
                            <input type="hidden" name="id" value="{{post._id}}" />
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

            <!-- Comment display -->
            <div class="comments">
                {{#each post.comments}}
                {{#if commentPermission}}
                <div class="comment-display">
                    <div class="profile"></div>
                    <div class="comments-body">
                        <h5>{{user.firstName}} {{user.lastName}}</h5>
                        <p>{{body}}</p>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</main>