<main>
    <div class="posts">
        {{#if category}}
        <h1 class="posts-category">{{category}}</h1>
        {{else}}
        <h1 class="posts-category">All Projects</h1>
        {{/if}}

        {{#if available}}
        {{#each posts}}
        <div class="post">
            <div class="head-post">
                {{#if file}}
                <img class="card-img-top" src="{{file}}" alt="Card image cap">
                {{else}}
                <img class="card-img-top" src="https://picsum.photos/id/1011/1000/1000" alt="Card image cap">
                {{/if}}
            </div>

            <div class="main-post">
                <div class="left-post-title">
                    <div class="calender">
                        <div class="calender-date">{{getDate creationDate}}</div>
                        <div class="calender-month">{{getMonth creationDate}}</div>
                    </div>
                    <div class="creator">
                        <!-- logo -->
                        <svg width="700" height="700" viewBox="0 0 177 100" fill="none"
                            xmlns="http://www.w3.org/2000/svg" class="creator-logo">
                            <path
                                d="M88 32.5C88 42.165 80.165 50 70.5 50H53V32.5C53 22.835 60.835 15 70.5 15C80.165 15 88 22.835 88 32.5Z"
                                fill="#eee" />
                            <path
                                d="M88 67.5C88 57.835 95.835 50 105.5 50H123V67.5C123 77.165 115.165 85 105.5 85C95.835 85 88 77.165 88 67.5Z"
                                fill="#eee" />
                            <path
                                d="M53 67.5C53 77.165 60.835 85 70.5 85H88V67.5C88 57.835 80.165 50 70.5 50C60.835 50 53 57.835 53 67.5Z"
                                fill="#eee" />
                            <path
                                d="M123 32.5C123 22.835 115.165 15 105.5 15H88V32.5C88 42.165 95.835 50 105.5 50C115.165 50 123 42.165 123 32.5Z"
                                fill="#eee" />
                        </svg>
                        <!-- / logo -->
                    </div>
                </div>
                <div class="right-post-title">
                    <h1 class="title">
                        {{title}}
                    </h1>
                    <p class="preview">
                        {{preview description}}
                    </p>
                    <div class="center-title-phone">
                        {{#if views}}
                        <h4 class="information">{{category.title}} - 3 Views</h4>
                        {{else}}
                        <h4 class="information">Post - 0 Views</h4>
                        {{/if}}
                        <h4 class="release-date">Release Date: {{getDate creationDate}} {{getMonth creationDate}}</h4>
                        <a href="/project/{{_id}}" class="read-more">Read More ðŸ¡†</a>
                    </div>
                </div>
            </div>
        </div>
        <hr class="phone">
        {{/each}}
        {{else}}
        <div class="post">
            <h1 class="noPost"> No Projects Yet </h1>
        </div>
        {{/if}}
</main>