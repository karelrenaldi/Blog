{{#if errors}}
{{#each errors}}
<div class="message-box failed" role="alert" style="margin-top: .8em;">
    <strong>{{message}}</strong>
    <button type="button" class="close-message">‚ùå</button>
</div>
{{/each}}
{{/if}}

<main>
    <div class="register">
        <div class="register-header">Register an Account</div>
        <div class="register-body">
            <form action="/register" method="post" class="register-form">
                <!-- NAME -->
                <div class="name">
                    <div class="firstName">
                        <label for="firstName">First Name</label>
                        <input name="firstName" class="form-input" id="firstName" type="text"
                            aria-describedby="nameHelp" required autocomplete="off" />
                    </div>
                    <div class="lastName">
                        <label for="lastName">Last Name</label>
                        <input name="lastName" class="form-input" id="lastName" type="text" aria-describedby="nameHelp"
                            required autocomplete="off" />
                    </div>

                </div>

                <!-- Email -->
                <div class="email">
                    <label for="email">Email</label>
                    <input name="email" class="form-input" id="email" type="email" aria-describedby="emailHelp" required
                        autocomplete="off" />
                </div>

                <!-- Password -->
                <div class="password">
                    <div class="password-first-input">
                        <label for="password">Password</label>
                        <input name="password" class="form-input" id="password" type="password" required />
                    </div>
                    <div class="password-second-input">
                        <label for="passwordConfirm">Password Confirm</label>
                        <input name="passwordConfirm" class="form-input" id="passwordConfirm" type="password"
                            required />

                    </div>

                </div>

                <button type="submit" class="submit-btn submit-register">Register</button>
            </form>
        </div>
    </div>
</main>